{
  "name": "module-federation-next",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "dev": "concurrently \"wsrun --parallel dev\" \"yarn webpack-dev\"",
    "postinstall": "yarn install-sidecar",
    "install-sidecar": "yarn install-sidecar:shell && yarn install-sidecar:homepage && yarn install-sidecar:jobs",
    "install-sidecar:shell": "yarn --cwd \"packages/shell/wp5-host\" install",
    "install-sidecar:homepage": "yarn --cwd \"packages/homepage/wp5-host\" install",
    "install-sidecar:jobs": "yarn --cwd \"packages/jobs/wp5-host\" install",
    "webpack-dev": "concurrently \"yarn webpack-dev:shell\" \"yarn webpack-dev:homepage\" \"yarn webpack-dev:jobs\"",
    "webpack-dev:shell": "yarn --cwd \"packages/shell/wp5-host\" start",
    "webpack-dev:homepage": "yarn --cwd \"packages/homepage/wp5-host\" start",
    "webpack-dev:jobs": "yarn --cwd \"packages/jobs/wp5-host\" start"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "wsrun": "^5.2.1"
  }
}
